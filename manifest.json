{
    "name": "Twitch loot auto-clicker",
    "version": "1.0",
    "description": "An extension who clicks on every twitch loot",
    "permissions": ["activeTab","declarativeContent","storage","alarms"],
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "images/appIcon.png"
        }
    },
    "content_scripts": [
        {
            "matches" : ["*://*.twitch.tv/*"],
            "js" : ["content.js"]
        }
    ],
    "icons": {
        "32": "images/appIcon.png"
    },
    "manifest_version": 2
}